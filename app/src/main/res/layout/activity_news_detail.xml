<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.ui.cs.myui.activity.NewsDetailActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/pubdate"
            android:text="@string/date_text"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_title"
            android:text="@string/title_text"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_author"
            android:text="@string/author_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_content"
            android:text="@string/dummy"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_line"
                    android:background="@drawable/line_button"
                    android:layout_marginTop="6dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <ImageButton
                    android:id="@+id/button_wa"
                    android:background="@drawable/whatsapp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="6dp" />

                <ImageButton
                    android:id="@+id/button_bookmark"
                    android:background="@drawable/bookmark_button"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="6dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
